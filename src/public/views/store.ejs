<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="../styles.css" />
    <title>Store</title>
   

   

</head>
<body  >
  <div class="d-none " id="alertMessage">
  <div class="alert w-75 " role="alert" >
   Hasta luego!
  </div></div>
  <div class=""  id="bodyHome">
  <% if (sessionData.userType == 'administrador' ) { %>
    <div >
      <h1 id="titleShopClient"  >SHOP</h1>
      <span class="hrShop"></span>
        </div>
    <%- include('../partials/navBarUser.ejs') %> 
      <div class="d-flex flex-row row ms-2 mb-5 ">
      <% productos.forEach((producto ,key) => { %> 
          <div class="card  m-5 cardProduct" style="width: 15rem;">
            <img src="../images/<%= producto.img %>" class=" cardImage"  width="150px" height="150px" alt="<%= producto.img %>" >
              <div class="card-body   ">
                <a  class="aLinkToProduct "href="/api/productos/producto/<%= producto._id %>"><h5 class="card-title "><%= producto.titulo %></h5></a>
                <p class="  cardDescrption"><small ><%= producto.descripcion %></small></p>
               <div class="contentPriceAndCode">
                <p class="  cardPrice">$<%= producto.precio %> </p>
                <p class=" cardCode">ID : <%= producto.codigo %></p>
               
               </div>
               <a href="/store/deleteproduct/<%= producto._id %> " class="w-100 deleteAdmin badge "><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash iconAdmin" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
              </svg></a>
              <a href="/store/updateproduct/<%= producto._id %> " class="w-100  updateAdmin badge "><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square iconAdmin" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
              </svg></a>
              </div>
            </div>
           
       <% }) %> 
            
          </div>
  
  <% } else if (sessionData.userType == 'cliente' ) { %>
    <div >
      <h1 id="titleShopClient"  >SHOP</h1>
      <span class="hrShop"></span>
        </div>
    <%- include('../partials/navBarUser.ejs') %> 
      <div class="d-flex flex-row row ms-2 mb-5 ">
      <% productos.forEach((producto ,key) => { %> 
          <div class="card  m-5 cardProduct" style="width: 15rem;">
            <img src="../images/<%= producto.img %>" class=" cardImage"  width="150px" height="150px" alt="<%= producto.img %>" >
              <div class="card-body   ">
                <a  class="aLinkToProduct "href="/api/productos/producto/<%= producto._id %>"><h5 class="card-title "><%= producto.titulo %></h5></a>
                <p class="  cardDescrption"><small ><%= producto.descripcion %></small></p>
               <div class="contentPriceAndCode">
                <p class="  cardPrice">$<%= producto.precio %> </p>
                <p class=" cardCode">ID : <%= producto.codigo %></p>
               
               </div>
                <a href="/cart/addproduct/<%= producto._id  %> " class="buttonAddToCart ">ADD TO CAR</a>
              </div>
            </div>
           
       <% }) %> 
            
          </div>
  
  <% }else{  %> 
    <div class=" ms-2 mb-5 ">
      <h1 class="  text-dark dontProductText text-opacity-10">There are no products</h1>
    </div>
  <% } %> 
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
<script src="../main.js"></script>

</html>